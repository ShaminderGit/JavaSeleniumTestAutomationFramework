<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite parallel="tests" name="Parallel Automation Suite">

    <listeners>
        <listener class-name="org.example.testutility.Listeners"/>
    </listeners>

    <test thread-count="2" name="Submit Order Tests">
        <classes>
            <class name="org.example.tests.SubmitOrderTest"/>
        </classes>
    </test>
    <test thread-count="2" name="Error Validation Tests">
        <classes>
            <class name="org.example.tests.ErrorValidationTest"/>
        </classes>
    </test>

</suite>